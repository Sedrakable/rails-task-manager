
<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to(task.title, task_path(task)) %>------<%= link_to "Delete",
            task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" } %></li>
  <% end %>
  <%= link_to "Add to List", new_task_path , class: "btn h-50 p-8 btn-primary" %>
</ul>
