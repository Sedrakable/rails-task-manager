
<div class="container">
  <div class="w-100 d-inline-flex justify-content-between" >
    <h1><%= @task.title %></h1>
    <%= link_to "Edit Task", edit_task_path(@task) , class: "btn h-50 btn-primary align-items-center" %>
  </div>

  <div class="details">
    <p><%= @task.details %></p>
  </div>
  <div class="form-check">

    <input class="form-check-input" type="checkbox" <%= 'checked' if @task.completed %> id="flexCheckDefault">
    <label class="form-check-label" for="flexCheckDefault">
      This taks has not been finished
    </label>
  </div>

  <%= link_to "Back to List", tasks_path , class: "btn h-50 p-8 btn-primary align-items-center" %>
</div>
